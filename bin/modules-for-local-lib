#!/bin/bash

. "$HELPERS_ROOT/lib/debug.sh"

local_lib="$1"
found=''
while read ll modules; do
  if [ -z "$ll" ] || [ "${ll:0:1}" == "#" ]; then
    continue
  fi
  if [ "$local_lib" == "$ll" ] || [ '!'"$local_lib" == "$ll" ]; then
    found=1
    for module in $modules; do
      echo "$module"
    done
  fi
done < "$HELPERS_ROOT/share/local-libs.txt"

if [ -z "$found" ]; then
  echo "Invalid local::lib!" 1>&2
  exit 1
fi
